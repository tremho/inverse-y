
{
  "compilerOptions": {
    "outDir": "./build",
    "declaration": true,
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "dom",
      "esNext",
      "scripthost",
      "es2015.proxy"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "**/node_modules/"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
